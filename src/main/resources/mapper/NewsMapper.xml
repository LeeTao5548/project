<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.lw.dao.NewsMapper">
    <resultMap id="BaseResultMap" type="com.lw.entity.News">
        <id column="id" jdbcType="VARCHAR" property="id" />
        <result column="creator" jdbcType="VARCHAR" property="creator" />
        <result column="status" jdbcType="VARCHAR" property="status" />
        <result column="title" jdbcType="VARCHAR" property="title" />
        <result column="content" jdbcType="VARCHAR" property="content" />
        <result column="img" jdbcType="VARCHAR" property="img" />
        <result column="createTime" jdbcType="VARCHAR" property="createTime" />
        <result column="groupId" jdbcType="VARCHAR" property="groupId" />
    </resultMap>

    <!--    <sql id="Base_Column_List">-->
    <!--        id,`username`,`nickname`,title,content,subject,status,groupId,groupName,createTime-->
    <!--    </sql>-->

    <insert id="addNews" parameterType="com.lw.entity.News">
        insert into news(id,creator,status,title,content,img,createTime,groupId)
        values(#{id,jdbcType=VARCHAR},#{creator,jdbcType=VARCHAR},#{status,jdbcType=VARCHAR},
        #{title,jdbcType=VARCHAR},#{content,jdbcType=VARCHAR},#{img,jdbcType=VARCHAR},
        #{createTime,jdbcType=VARCHAR},#{groupId,jdbcType=VARCHAR})
    </insert>

    <update id="updateNewsStatus" parameterType="java.lang.String">
        update news set `status` = #{status,jdbcType=VARCHAR} where id = #{id,jdbcType=VARCHAR}
    </update>

    <select id="getNews" resultType="com.lw.entity.News">
        select * from news where `status` = '0'
        <if test="search != null and search != ''">
            and content like '%${search}%'
            or title like '%${search}%'
        </if>
        <if test="groupId !=null and groupId != ''">
            and groupId = #{groupId,jdbcType=VARCHAR}
        </if>
        order by createTime desc
    </select>



</mapper>