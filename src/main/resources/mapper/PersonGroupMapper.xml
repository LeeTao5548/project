<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.lw.dao.PersonGroupMapper">
    <resultMap id="BaseResultMap" type="com.lw.entity.Group">
        <id column="id" jdbcType="VARCHAR" property="id" />
        <result column="status" jdbcType="VARCHAR" property="status" />
        <result column="username" jdbcType="VARCHAR" property="username" />
        <result column="groupId" jdbcType="VARCHAR" property="groupId" />
    </resultMap>

    <!--    <sql id="Base_Column_List">-->
    <!--        id,`username`,`nickname`,title,content,subject,status,groupId,groupName,createTime-->
    <!--    </sql>-->

    <insert id="insertPersonGroup" parameterType="com.lw.entity.PersonGroup">
        insert into `person_group`(`id`,`username`,`groupId`,`status`)
        value(#{id,jdbcType=VARCHAR},#{username,jdbcType=VARCHAR},#{groupId,jdbcType=VARCHAR},#{status,jdbcType=VARCHAR})
    </insert>

    <select id="getPersonGroup" parameterType="java.lang.String" resultMap="com.lw.entity.PersonGroup">
        select * from `person_group` where `username`= #{username}
    </select>

    <update id="updatePerson" parameterType="java.lang.String">
        update `person_group` set `status`= #{status} where `username`= #{username}
    </update>

    <delete id="delPersonGroup" parameterType="java.lang.String">
        delete from `person_group` where `id` = #{id}
    </delete>
</mapper>