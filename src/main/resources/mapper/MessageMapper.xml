<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.lw.dao.MessageMapper">
    <resultMap id="BaseResultMap" type="com.lw.entity.Message">
        <id column="id" jdbcType="VARCHAR" property="id" />
        <result column="username" jdbcType="VARCHAR" property="username" />
        <result column="nickname" jdbcType="VARCHAR" property="nickname" />
        <result column="title" jdbcType="VARCHAR" property="title" />
        <result column="content" jdbcType="VARCHAR" property="content" />
        <result column="subject" jdbcType="VARCHAR" property="subject" />
        <result column="status" jdbcType="VARCHAR" property="status" />
        <result column="groupId" jdbcType="VARCHAR" property="groupId" />
        <result column="groupName" jdbcType="VARCHAR" property="groupName" />
        <result column="createTime" jdbcType="VARCHAR" property="createTime" />
        <result column="subjectName" jdbcType="VARCHAR" property="subjectName" />
    </resultMap>

    <sql id="Base_Column_List">
        id,`username`,`nickname`,title,content,subject,status,groupId,groupName,createTime,subjectName
	</sql>

    <insert id="insert" parameterType="com.lw.entity.Message">
		insert into
		message(<include refid="Base_Column_List"></include>)
		values (#{id,jdbcType=VARCHAR},#{username,jdbcType=VARCHAR},#{nickname,jdbcType=VARCHAR},#{title,jdbcType=VARCHAR},
		#{content,jdbcType=VARCHAR},#{subject,jdbcType=VARCHAR},#{status,jdbcType=VARCHAR},#{groupId,jdbcType=VARCHAR},
        #{groupName,jdbcType=VARCHAR},#{createTime,jdbcType=VARCHAR},#{subjectName,jdbcType=VARCHAR})
	</insert>

    <select id="getMessage" resultType="com.lw.entity.Message">
        select <include refid="Base_Column_List"></include>
        from message
        where `status`= '0'
        <if test="search != null and search != ''">
            and content like '%${search}%' or title like '%${search}%'
        </if>
        <if test="subject != null and subject != ''">
            and subject = #{subject,jdbcType=VARCHAR}
        </if>
        <if test="beginTime != null and beginTime != ''">
            and createTime &gt;= #{beginTime,jdbcType=VARCHAR}
        </if>
        <if test="endTime != null and endTime != ''">
            and createTime &lt;= #{endTime,jdbcType=VARCHAR}
        </if>
        order by createTime desc
    </select>

    <update id="updateMessageStatus" parameterType="java.lang.String">
        update message set status=#{status,jdbcType=VARCHAR} where id = #{id,jdbcType=VARCHAR}
    </update>
</mapper>