<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.lw.dao.ReviewMapper">
    <resultMap id="BaseResultMap" type="com.lw.entity.Review">
        <id column="id" jdbcType="VARCHAR" property="id" />
        <result column="username" jdbcType="VARCHAR" property="username" />
        <result column="toUsername" jdbcType="VARCHAR" property="toUsername" />
        <result column="nickname" jdbcType="VARCHAR" property="nickname" />
        <result column="toNickname" jdbcType="VARCHAR" property="toNickname" />
        <result column="content" jdbcType="VARCHAR" property="content" />
        <result column="messageId" jdbcType="VARCHAR" property="messageId" />
        <result column="isRead" jdbcType="BIT" property="siRead" />
        <result column="createTime" jdbcType="VARCHAR" property="createTime" />
    </resultMap>

<!--    <sql id="Base_Column_List">-->
<!--        id,`username`,`nickname`,title,content,subject,status,groupId,groupName,createTime-->
<!--    </sql>-->

    <insert id="insertReview" parameterType="com.lw.entity.Review">
        insert into review(id,username,toUsername,nickname,toNickname,content,messageId,isRead,createTime)
        values(#{id,jdbcType=VARCHAR},#{username,jdbcType=VARCHAR},#{toUsername,jdbcType=VARCHAR},
        #{nickname,jdbcType=VARCHAR},#{toNickname,jdbcType=VARCHAR},#{content,jdbcType=VARCHAR},
        #{messageId,jdbcType=VARCHAR},#{isRead,jdbcType=BIT},#{createTime,jdbcType=VARCHAR})
    </insert>


    <select id="getReviewByMessageId" resultType="com.lw.entity.Review">
        select * from review where messageId = #{messageId,jdbcType=VARCHAR} order by createTime desc
    </select>

    <delete id="deleteReview" parameterType="java.lang.String">
        delete from review where id = #{id,jdbcType=VARCHAR}
    </delete>

    <delete id="deleteReviewByMessageId" parameterType="java.lang.String">
        delete from review where messageId = #{messageId,jdbcType=VARCHAR}
    </delete>

    <select id="getReviewByUsername" resultType="com.lw.entity.Review">
        select * from review where 1=1
        <if test="username != null and username != ''">
         and username = #{username,jdbcType=VARCHAR}
        </if>
        <if test="toUsername != null and toUsername != ''">
        and toUsername = #{toUsername,jdbcType=VARCHAR}
        </if>
       order by createTime desc
    </select>
</mapper>